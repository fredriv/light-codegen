@import com.jsoniter.any.Any
@args (Any config)

@if(config.toBoolean("supportDb") ){
@with (driverClassName = config.toString("dbInfo", "driverClassName"), jdbcUrl=config.toString("dbInfo", "jdbcUrl"), username=config.toString("dbInfo", "username"), password=config.toString("dbInfo", "password")) {

OracleDataSource:
  DriverClassName: oracle.jdbc.pool.OracleDataSource
  jdbcUrl: ${datasource.jdbcUrl:@jdbcUrl}
  username: ${datasource.username:SYSTEM}
  parameters:
    maximumPoolSize: ${datasource.maximumPoolSize:10}
    useServerPrepStmts: 'true'
    cachePrepStmts: 'true'
    cacheCallableStmts: 'true'
    prepStmtCacheSize: ${datasource.prepStmtCacheSize:10}
    prepStmtCacheSqlLimit: ${datasource.prepStmtCacheSqlLimit:2048}
    connectionTimeout: ${datasource.conectionTimeout:5000}
}
}